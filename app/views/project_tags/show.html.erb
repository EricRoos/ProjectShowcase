<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @project_tag %>

    <%= link_to 'Edit this project_tag', edit_project_tag_path(@project_tag), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this project_tag', project_tag_path(@project_tag), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to project_tags', project_tags_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
