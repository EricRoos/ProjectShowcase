<%= render layout: 'layouts/project' do %>
  <%= turbo_frame_tag :tags do %>

    <div class="w-full">
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>
    </div>
    <div class="w-full">
      <div class="flex justify-between items-center">
        <h5 class="text-2xl text-gray-500">Tags</h5>
      </div>
      <hr class='my-4'/>
      <div id="project_tags" class="min-w-full flex gap-2 flex-wrap py-2">
        <div class='bg-gray-100 px-2 p-1 rounded flex items-center gap-2'>
          <%= turbo_frame_tag :new_project_tag, src: new_project_project_tag_path(@project) %>
        </div>
        <% @project_tags.each do |tag| %>
          <div class='bg-blue-100 px-2 p-1 rounded flex items-center gap-2'>
            <%= button_to project_project_tag_path(@project, tag), method: :delete, 'aria-label': "Remove tag: #{tag}" do %>
              &times;
            <% end %>
            <%= tag %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
