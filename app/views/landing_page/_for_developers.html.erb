    <div class="relative">
      <%= render_feature(:project_finder, 'landing_page') %>
    </div>

    <div class="relative">
      <%= render_feature(:submit_solutions, 'landing_page') %>
    </div>

    <div class="relative">
      <%= render_feature(:provide_feedback, 'landing_page') %>
    </div>

    <div class="relative">
      <%= render_feature(:submit_projects, 'landing_page') %>
    </div>
  </dl>
</div>
