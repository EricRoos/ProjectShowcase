<%= turbo_frame_tag :alerts do %>
  <% if notice.present? %>
    <p class="text-center w-full px-3 bg-green-50 mb-5 text-green-500 font-medium inline-block"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="text-center w-full px-3 bg-red-50 mb-5 text-red-500 font-medium inline-block" ><%= alert %></p>
  <% end %>
<% end %>
