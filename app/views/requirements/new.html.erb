<%= turbo_frame_tag "requirements" do %>
  <div class="mx-auto w-full">
    <h5 class="text-2xl text-gray-500">New requirement</h5>
    <hr class='my-4'/>

    <%= render "form", requirement: @requirement %>

    <%= link_to 'Back to requirements', project_requirements_path(@requirement.project), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
<% end %>
