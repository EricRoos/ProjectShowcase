<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @requirement %>

    <%= link_to 'Edit this requirement', edit_requirement_path(@requirement), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this requirement', requirement_path(@requirement), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Back to requirements', project_requirements_path(@requirement.project), class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
