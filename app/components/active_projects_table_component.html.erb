<div class='flex flex-col gap-8'>
  <div class='text-2xl text-brand'><%= @title %></div>
  <div class='w-full flex gap-2 font-bold'>
    <div class='w-2/5 md:w-3/5 bg-gray-100 p-4'>
      Name
    </div>
    <div class='w-2/5 md:w-1/5 bg-gray-100 p-4'>
      Started On
    </div>
    <div class='w-1/5 bg-gray-100 p-4'>
      Actions
    </div>
  </div>
  <div class='w-full flex flex-col gap-2' id='user_projects'>
    <% @projects.each do |project| %>
      <div class='w-full flex gap-2'>
        <div class='w-2/5 md:w-3/5 bg-gray-100 p-4'>
          project.name
        </div>
        <div class='w-2/5 md:w-1/5 bg-gray-100 p-4'>
          project.started_on
        </div>
        <div class='w-1/5 bg-gray-100 p-4 flex gap-4'>
          <div class='flex justify-center items-center'>
            <%= link_to 'View', '#' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
